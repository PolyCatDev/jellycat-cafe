---
interface Items {
    text: string;
    href?: string;
}

interface Props {
    title?: string;
    items: Items[];
}

const { title, items } = Astro.props;
---

{title && <h2 class="text-2xl font-bold">{title}</h2>}

<ul>
    {
        items.map((item) => (
            <li class="list-disc ml-5">
                {item.href ? <a href={item.href} class="hover:underline">{item.text}</a> : item.text}
            </li>
        ))
    }
</ul>
