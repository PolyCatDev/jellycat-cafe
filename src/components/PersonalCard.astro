---
import Block from "../layouts/Block.astro";
import { Image } from "astro:assets";

import pfp from "../media/pfp.png";

// md:flex
---

<Block>
    <div class={"flex flex-col text-center md:text-left md:flex-row place-items-center"}>
        <Image
            class={"rounded-full m-3"}
            src={pfp}
            width={160}
            alt={"Profile picture"}
            loading={"eager"}
        />
        <div class="max-w-sm flex flex-col">
            <h3 class="text-xl font-bold">
                Hi, I'm PolyCat and welcome to my virtual cat cafe
            </h3>
            <p class="mt-2">
                I'm an artist and programmer that likes penguins and hot
                chocolate.
            </p>
        </div>
    </div>
</Block>
