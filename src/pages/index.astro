---
import PageBase from "../layouts/PageBase.astro";
import Logo from "../components/elements/Logo.astro";
---

<PageBase title="Index" description="Welcome to the JellyCat Cafe">
    <div class="md:flex md:justify-center">
        <div class="p-8 w-screen md:w-xl">
            <Logo />
        </div>
    </div>
    <h1 class="text-center text-6xl font-bold font-[Twinkle_Star] text-fade-in">JellyCat Cafe</h1>
</PageBase>

<style is:global>

    @import url('https://fonts.googleapis.com/css2?family=Pacifico&family=Playwrite+ES+Deco:wght@100..400&family=Playwrite+PT:wght@100..400&family=Twinkle+Star&display=swap');

    #logo {
        animation-duration: 1s;
        animation-name: fadeIn;
    }

    #rings, .text-fade-in {
        animation-duration: 800ms;
        animation-delay: 100ms;
        animation-name: ringsFadeIn;
    }

    .text-fade-in {
        animation-delay: 400ms;
        animation-duration: 800ms;
        visibility: hidden;
        animation-fill-mode: forwards;

    }
    #floating-blobs {
        visibility: hidden;
        animation-delay: 300ms;
        animation-duration: 1s;
        animation-name: blobsFadeIn;
        animation-fill-mode: forwards;
    }

    #face {
        visibility: hidden;
        animation-delay: 300ms;
        animation-duration: 800ms;
        animation-name: blobsFadeIn;
        animation-fill-mode: forwards;
    }



    @keyframes fadeIn {
        from {
            visibility: hidden;
            opacity: 0;
            transform: translateY(80px);
        }
        to {
            visibility: visible;
            opacity: 1;
            transform: translateY(0px);
        }
    }

    @keyframes ringsFadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0px);
            visibility: visible;
        }
    }

    @keyframes blobsFadeIn {
        from {
            visibility: hidden;
            opacity: 0;
            transform: translateY(10px);
        }
        90% {
            opacity: 1;
        }
        to {
            visibility: visible;
            transform: translateY(0px);
        }
    }
</style>
