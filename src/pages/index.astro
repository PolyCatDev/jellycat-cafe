---
import PageBase from "../layouts/PageBase.astro";
import Logo from "../components/elements/Logo.astro";
---

<PageBase title="Index" description="Welcome to the JellyCat Cafe">
    <div class="m-4">
        <Logo />
    </div>
</PageBase>

<style is:global>
    #logo {
        animation-duration: 1s;
        animation-name: fadeIn;
    }

    #rings {
        animation-duration: 1s;
        animation-name: ringsFadeIn;
        animation-delay: 0ms;
    }

    #floating-blobs {
        visibility: hidden;
        animation-delay: 300ms;
        animation-duration: 1s;
        animation-name: blobsFadeIn;
        animation-fill-mode: forwards;
    }

    @keyframes fadeIn {
        from {
            visibility: hidden;
            opacity: 0;
            transform: translateY(80px);
        }
        to {
            visibility: visible;
            opacity: 1;
            transform: translateY(0px);
        }
    }

    @keyframes ringsFadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0px);
        }
    }

    @keyframes blobsFadeIn {
        from {
            visibility: hidden;
            opacity: 0;
            transform: translateY(10px);
        }
        90% {
            opacity: 1;
        }
        to {
            visibility: visible;
            transform: translateY(0px);
        }
    }
</style>
