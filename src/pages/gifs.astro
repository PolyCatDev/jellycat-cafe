---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const gifImages = await Astro.glob("../assets/gifs/*.gif");
---

<Layout title="Gif Collection" description="Gif Collection" footer={true}>
    <Header motto="Gif Collection"></Header>
    <section class="flex flex-wrap justify-center items-start">
        {
            gifImages.map((image) => (
                <Image src={image.default} alt={`GIF image`} class="rounded m-2 h-64 w-auto" />
            ))
        }
    </section>
    <Footer/>
</Layout>
